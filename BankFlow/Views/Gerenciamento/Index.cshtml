@{
    ViewData["Title"] = "Gerenciamento de Saldo";
}

<div class="text-center">
    <h1 class="display-4">Gerenciamento de Saldo</h1>
    <p>Gerencie seu saldo e outras transações.</p>

    <div class="mt-5">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                        Saldo
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show">
                    <div class="accordion-body">
                        <strong>Saldo disponivel</strong> 
                        <p>R$ 0.00</p>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
                        Lançamento de Crédito
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <strong>Cliente nome</strong> 

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Valor">
                            <label for="floatingInput">Valor à ser lançado R$</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4">
                            <button type="button" class="btn btn-success col-md-3">Lançar</button>
                            <button type="button" class="btn btn-danger col-md-3">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                        Transferência
                    </button>
                </h2>
                <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <strong>Verifique seu saldo antes de prosseguir.</strong>

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="CPF">
                            <label for="floatingInput">CPF do destinatário</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" placeholder="Valor">
                            <label for="floatingInput">Valor à ser transferido R$</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4">
                            <button type="button" class="btn btn-success col-md-3">Transferir</button>
                            <button type="button" class="btn btn-danger col-md-3">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
